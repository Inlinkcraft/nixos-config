(defvar width "1920")
(defvar height "1080")

(defwindow clock
    :monitor 0
    :geometry (geometry 
        :x "0px" 
        :y "${height * 0.5}px" 
        :width "${width * 0.25}px" 
        :height "${height * 0.25}px" 
        :anchor "center"
    )
    :stacking "overlay"
    :exclusive false
    :focusable "ondemand"
    (box
        :orientation "h"
        "03"
        "|"
        "51"
    )
)

