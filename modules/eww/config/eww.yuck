(defwindow clock [width height spacing]
    :monitor 0
    :geometry (geometry 
        :x "${(0.335 * width) - spacing}px" 
        :y "${(0.25 * height) - spacing}px" 
        :width "${(0.33 * width) - (spacing / 2)}px" 
        :height "${(0.25 * height) - (spacing / 2)}px" 
        :anchor "top left"
    )
    :stacking "overlay"
    :exclusive false
    :focusable "ondemand"
    (box
        :orientation "h"
        "03"
        "|"
        "51"
    )
)

