)

(defwindow lock [width height spacing]
    :monitor 0
    :geometry (geometry 
        :x "${(0.55 * width) + spacing}px" 
        :y "${(0.75 * height) + spacing*2}px" 
        :width "${(0.05 * width) - (spacing / 2)}px" 
        :height "${(0.05 * height) - (spacing / 2)}px" 
        :anchor "top left"
    )
    :stacking "overlay"
    :exclusive false
    :focusable "ondemand"
    (button
        :onclick "bash -lc ''"
        "lock"
