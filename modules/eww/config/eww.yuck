(defwindow dashboard
  :monitor 0
  :geometry (geometry :x "0%" :y "0%" :width "100%" :height "100%" :anchor "top left")
  :stacking "overlay"
  :exclusive false
  :focusable "ondemand"
  (dashboard))

(defwidget dashboard []
  (overlay :class "screen" :hexpand true :vexpand true
    (eventbox :class "scrim" :hexpand true :vexpand true
      :onclick "eww close dashboard"
      (box :class "scrim-fill" :hexpand true :vexpand true))

